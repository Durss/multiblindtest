{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"noImplicitAny": false,
		"noImplicitThis": false,
		"strictNullChecks": false,
		"importHelpers": true,
		"experimentalDecorators": true,
		"sourceMap": false,
		"baseUrl": ".",
		"outDir": "./server",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@/*": [
				"server_src/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"server_src/**/*.ts",
		"server_src/**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}